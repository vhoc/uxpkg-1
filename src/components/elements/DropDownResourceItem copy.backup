import React, { HTMLAttributes } from 'react'
import { Typography } from './Typography'
import { colors } from '../../theme'

export interface DropDownResourceItemProps extends HTMLAttributes<HTMLDivElement> {
    /** Value to control the DropDown */
    value?: string | undefined
    /** Upper text (resource name) */
    label: string
    /** Lower text */
    caption: string
    /** Icon element (Resource icon) */
    icon: any
    /** The default selected value if any. */
    onClick?: React.MouseEventHandler<HTMLDivElement> | undefined
    /** Style overrides */
    style?: React.CSSProperties | undefined
}

export const DropDownResourceItem = ({ value, label, caption, icon, onClick, style,  }: DropDownResourceItemProps): JSX.Element => {

    return (
        <div
            style={{
                width: '100%',
                paddingTop: '8px',
                paddingBottom: '8px',
                paddingLeft: '12px',
                paddingRight: '12px',
                display: 'flex',
                justifyContent: 'space-between',
                ...style,
            }}
        >
            {/** LEFT (Icon Element) */}
            <div
                style={{
                    width: '20px',
                }}
            >
                {icon ? icon : null}
            </div>

            {/** RIGHT */}
            <div
                style={{
                    display: 'flex',
                    flexDirection: 'column',
                    justifyContent: 'center',
                }}
            >

                <Typography variant={'breadcrumbLink'} color={ colors.gray[90]} >{label}</Typography>

            </div>


        </div>
    )

}
